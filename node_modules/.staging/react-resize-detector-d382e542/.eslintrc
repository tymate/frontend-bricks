{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "max-len": [2, 120],
    "react/jsx-filename-extension": 0,
    "react/destructuring-assignment": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [".", "src", "node_modules"],
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
